package jp.co.iccom.suganuma_haruka.calculate_sales;

import java.io.*;

public class SitenFile {
	public static void main(String[] args) {
		try {
			File file = new File("C:\\java\\blanch.lst");
			FileReader fr = new FileReader(file);
			BufferedReader br = new BufferedReader(fr);
			String s;
			while((s = br.readLine()) != null) {
				System.out.println(s);
			}
			br.close();
		} catch(IOException e) {
			System.out.println(e + "支店定義ファイルが存在しません。");
		}
		try {
			FileOutputStream fs = new FileOutputStream("C:\\java\\blanch.lst");
			ObjectOutputStream os = new ObjectOutputStream(fs);
			os.writeObject(file);
			os.close();
		} catch(IOException e) {
			System.out.println(e + "支店定義ファイルのフォーマットが不正です。");
		}
	}
}