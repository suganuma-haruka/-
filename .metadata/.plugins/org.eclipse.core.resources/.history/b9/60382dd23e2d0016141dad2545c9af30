package jp.co.iccom.suganuma_haruka.calculate_sales;

import java.io.*;

public class SitenFile {
	public static void main(String[] args) {
		try {
			File file = new File("C:\\java\\blanch.lst");
			FileReader fr = new FileReader(file);
			BufferedReader br = new BufferedReader(fr);
			String s;
			while((s = br.readLine()) != null) {
				System.out.println(s);
			}
			br.close();
		
			FileOutputStream fo = new FileOutputStream("C:\\java\\blanch.lst");
			ObjectOutputStream os = new ObjectOutputStream(fo);
			os.writeObject(file);
			os.close();
			
			FileInputStream fi = new FileInputStream("C:\\java\\blanch.lst");
			ObjectInputStream oi = new ObjectInputStream(fi);
			File bla = (File)oi.readObject();
			oi.close();
		
		} catch(IOException e) {
			System.out.println(e + "支店定義ファイルのフォーマットが不正です。");	
	
		} catch(ArithmeticException e) {
			System.out.println(e + "支店定義ファイルが存在しません。");
		
		} catch(Exception e) {
			System.out.println(e + "支店定義ファイルのフォーマットが不正です。");
		}
		}
	}
}