package jp.co.iccom.suganuma_haruka.calculate_sales;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileOutputStream;
import java.io.FileReader;
import java.io.IOException;
import java.io.ObjectOutputStream;

public class SyouhinFile {
	public static void main(String[] args) {
		try {
			File file = new File("C:\\java\\commodity.lst");
			FileReader fr = new FileReader(file);
			BufferedReader br = new BufferedReader(fr);
			String s;
			while((s = br.readLine()) != null) {
				System.out.println(s);
			}
			br.close();
			
			FileOutputStream fs = new FileOutputStream("C:\\java\\commodity.lst");
			ObjectOutputStream os = new ObjectOutputStream(fs);
			os.writeObject(file);
			os.close();
			
		} catch(ArithmeticException e) {
			System.out.println(e + "商品定義ファイルが存在しません。");
			
		} catch(IOException e) {
			System.out.println(e + "支店定義ファイルのフォーマットが不正です。");
		}
	}
}